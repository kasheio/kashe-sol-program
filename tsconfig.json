{
  "compilerOptions": {
    "types": [
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "paths": {
      "@solana/codecs-data-structures": ["./types/codecs-data-structures.d.ts"]
    }
  },
  "include": ["scripts/**/*", "tests/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}